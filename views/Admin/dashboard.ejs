<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Administración</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css" />
    <link rel="stylesheet" type="text/css"
        href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />

    <!-- DataTables JS -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

    <!-- Nuestro archivo JS personalizado -->
    <script src="/javascripts/admin.js" type="module"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="/stylesheets/admin/dashboard.css" />

</head>

<body>
    <!-- Menú lateral -->
    <div class="sidebar">
        <div class="logo">
            <h2><i class="fas fa-graduation-cap"></i> Academia</h2>
        </div>

        <div class="welcome-section">
            <h3>Bienvenido, <%= user ? user.nombre : 'Usuario' %></h3>
            <p><%= user ? user.correo : '' %></p>
            <div class="user-role">
                <% if (user && user.rol === 1) { %>
                    <span class="badge bg-primary">Administrador</span>
                <% } else if (user && user.rol === 2) { %>
                    <span class="badge bg-success">Profesor</span>
                <% } else if (user && user.rol === 3) { %>
                    <span class="badge bg-info">Estudiante</span>
                <% } %>
            </div>
        </div>

        <div class="nav-menu">
            <a href="/Admin/dashboard" class="nav-item active"><i class="fas fa-home"></i> Inicio</a>
            <a href="#" class="nav-item"><i class="fas fa-users"></i> Usuarios</a>
            <a href="/Admin/cursos" class="nav-item" id="menuCursos"><i class="fas fa-book"></i> Cursos</a>
            <a href="#ButtonExportDiv" class="nav-item"><i class="fas fa-chart-bar"></i> Reportes</a>
            <a href="#" class="nav-item"><i class="fas fa-cog"></i> Configuración</a>
        </div>

        <div class="logout-btn">
            <a href="/logout">
                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
            </a>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <div class="header">
            <h1>Panel de Administración</h1>
            <div class="user-info">
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-1"></i>
                        <%= user ? user.nombre : 'Usuario' %>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/perfil"><i class="fas fa-user me-2"></i>Mi perfil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card">
            
            <div class="table-responsive">
                <button onclick="window.location.href='/Admin/nuevoAdmin'" class="btn btn-primary nuevoUsuario">Nuevo Usuario</button>
                <table id="myTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Tipo Id</th>
                            <th>Identificacion</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (usuarios && usuarios.length> 0) { %> <% usuarios.forEach(usuario=> { %>
                                <tr>
                                    <td>
                                        <%= usuario.idusuario || 'N/A' %>
                                    </td>
                                    <td>
                                        <%= usuario.nombreusuario+" "+usuario.apellidousuario ||
                  'N/A'%>
                </td>
                <td><%= usuario.correousuario || 'N/A' %></td>
                <td>
                  <span
                    class=" badge <%=usuario.idrol_fk===1 ? 'badge-primary' : 'badge-secondary' %>"
                                            >
                                            <% if (usuario.idrol_fk===1) { %> Administrador <% } else if
                                                    (usuario.idrol_fk===2) { %> Profesor <% } else if
                                                        (usuario.idrol_fk===3) { %> Alumno <% } %>
                                                            </span>
                                    </td>
                                    <td>
                                        <%= usuario.tipo_identificacion || 'N/A' %>
                                    </td>
                                    <td>
                                        <%= usuario.identificacion || 'N/A' %>
                                    </td>
                                    <td>
                                        <% if (usuario.estado === 1) { %>
                                            Activo
                                        <% } else { %>
                                            Inactivo
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/editar/<%= usuario.correousuario %>" class="btn btn-sm btn-icon" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="empty-state">
                                                <i class="fas fa-inbox"></i>
                                                <h3>No hay usuarios registrados</h3>
                                                <p>No se encontraron registros para mostrar</p>
                                            </td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div id="ButtonExportDiv" class="ButtonExportDiv">
            <button class="Exportar">
                <i class="fas fa-download"></i> Exportar
            </button>
            <div id="toolbar" class="ButtonExport">

            </div>
        </div>
    </div>

    <script>

        document.addEventListener("DOMContentLoaded", function () {
            // Código JavaScript irá aquí
        });
    </script>
</body>

</html>