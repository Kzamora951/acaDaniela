<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel del Profesor</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/admin/dashboard.css" />
    <link rel="stylesheet" href="/stylesheets/profesor/dashboard.css" />
</head>

<body data-authenticated="<%= typeof user !== 'undefined' %>">
    <!-- Menú lateral -->
    <div class="sidebar">
        <div class="logo">
            <h2><i class="fas fa-chalkboard-teacher"></i> Profesor</h2>
        </div>

        <div class="welcome-section">
            <h3>Bienvenido, <%= user ? user.nombre : 'Profesor' %></h3>
            <p><%= user ? user.correo : '' %></p>
            <div class="user-role">
                <span class="badge bg-success">Profesor</span>
            </div>
        </div>

        <div class="nav-menu">
            <div class="nav-item active"><i class="fas fa-home"></i> Inicio</div>
            <div class="nav-item"><i class="fas fa-calendar-alt"></i> Horarios</div>
            <div class="nav-item"><i class="fas fa-book"></i> Cursos</div>
            <div class="nav-item"><i class="fas fa-tasks"></i> Tareas</div>
            <div class="nav-item"><i class="fas fa-users"></i> Estudiantes</div>
            <div class="nav-item"><i class="fas fa-chart-line"></i> Reportes</div>
        </div>

        <div class="mt-auto">
            <a href="/logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
            </a>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <div class="header">
            <h1>Panel del Profesor</h1>
            <div class="user-info">
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" id="userDropdown" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-1"></i>
                        <%= user ? user.nombre : 'Profesor' %>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/perfil"><i class="fas fa-user me-2"></i>Mi perfil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Estadísticas rápidas -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card bg-primary">
                    <i class="fas fa-book-open"></i>
                    <h3>5</h3>
                    <p>Cursos Activos</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card bg-success">
                    <i class="fas fa-users"></i>
                    <h3>120</h3>
                    <p>Estudiantes</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card bg-warning">
                    <i class="fas fa-tasks"></i>
                    <h3>8</h3>
                    <p>Tareas Pendientes</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card bg-danger">
                    <i class="fas fa-bell"></i>
                    <h3>3</h3>
                    <p>Notificaciones</p>
                </div>
            </div>
        </div>

        <!-- Sección de Cursos Recientes -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-book me-2"></i>Mis Cursos</h5>
                <a href="#" class="btn btn-sm btn-outline-primary">Ver todos</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Curso</th>
                                <th>Estudiantes</th>
                                <th>Progreso</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Matemáticas Avanzadas</td>
                                <td>25</td>
                                <td>
                                    <div class="progress" style="height: 5px;">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%" 
                                             aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>75% completado</small>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver detalles</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Física Moderna</td>
                                <td>20</td>
                                <td>
                                    <div class="progress" style="height: 5px;">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 45%" 
                                             aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>45% completado</small>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver detalles</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Tareas Pendientes -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Próximas Tareas por Revisar</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Tarea: Examen de Matemáticas</h6>
                            <small class="text-muted">Curso: Matemáticas Avanzadas - Fecha de entrega: 15/11/2023</small>
                        </div>
                        <span class="badge bg-primary rounded-pill">12 por revisar</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Proyecto: Laboratorio de Física</h6>
                            <small class="text-muted">Curso: Física Moderna - Fecha de entrega: 18/11/2023</small>
                        </div>
                        <span class="badge bg-warning text-dark rounded-pill">8 por revisar</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/javascripts/profesor/dashboard.js"></script>
</body>

</html>